@{
    ViewData["SiteName"] = "The Joel Hilton Film Collection";
    ViewData["PageName"] = "Confirmation";
}

@model Assignment_3.Models.EnterNewMovieResponse

@* Show Confirmation that movie was added to database. Allow option to enter another movie or view the database. *@
<div>
    <h1>Congratulations! You have successfully entered @Model.Title into the database!</h1>
    <br />
    <a asp-controller="Home" asp-action="MovieDatabase">Click here to view the movie database</a>
    <br />
    <a asp-controller="Home" asp-action="EnterNewMovie">Click here to enter a new movie</a>
</div>
