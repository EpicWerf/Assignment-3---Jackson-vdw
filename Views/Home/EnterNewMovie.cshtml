@{
    ViewData["SiteName"] = "The Joel Hilton Film Collection";
    ViewData["PageName"] = "Enter a New Movie";
}

@* Bring in model that will be used *@
@model Assignment_3.Models.EnterNewMovieResponse

@* Print Page name *@
<h1>@ViewData["PageName"]</h1>

@* Form to allow user to add a movie to the database *@
@* Collect inputs, assign them to asp-for, submit form *@
<div>
    <form asp-action="EnterNewMovie" method="Post">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" />
        <br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
        <br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" />
        <br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
        <br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value=""></option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />

        <label asp-for="Edited">Edited?</label>
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="No">No</option>
            <option value="Yes">Yes</option>
        </select>
        <br />

        <label asp-for="LentTo">Lent to (leave blank if N/A):</label>
        <input asp-for="LentTo" />
        <br />

        <label asp-for="Notes">Notes:</label>
        <textarea asp-for="Notes"></textarea>
        <br />

        <button type="submit">Enter the new movie!</button>
        
        @* Print any validation failures that happen along the way *@
        <div asp-validation-summary="All"></div>
    </form>
</div>
